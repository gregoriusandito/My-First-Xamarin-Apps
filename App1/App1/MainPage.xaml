<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:App1"
             x:Class="App1.MainPage">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Row="0" Grid.Column="0" Text="HOL 1" BackgroundColor="#1976d2" FontAttributes="Bold" TextColor="White" x:Name="buttonHOL1" Clicked="OnFirstButtonXaml"/>
            <Button Grid.Row="0" Grid.Column="1" Text="HOL 1A" BackgroundColor="#63a4ff" FontAttributes="Bold" TextColor="White" x:Name="buttonHOL1A"/>
            <Button Grid.Row="1" Grid.Column="0" Text="HOL 2" BackgroundColor="#004ba0" FontAttributes="Bold" TextColor="White" x:Name="buttonHOL2"/>
            <Button Grid.Row="1" Grid.Column="1" Text="HOL 3" BackgroundColor="#98A4AE" FontAttributes="Bold" TextColor="White" x:Name="buttonHOL3"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>